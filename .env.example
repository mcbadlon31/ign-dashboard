# For SQLite dev
DATABASE_PROVIDER=sqlite
DATABASE_URL=file:./dev.db

# Auth
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=changeme

# Optional Google OAuth (recommended later)
GOOGLE_CLIENT_ID=
